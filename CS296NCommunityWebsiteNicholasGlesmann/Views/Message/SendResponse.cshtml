@{
    Layout = "_Layout1";
    ViewData["Title"] = "Send Response";
}

<div class="container">
    <div class="panel panel-success text-center">
        <div class="panel-heading text-center">
            <h1>Respond to the message:</h1>
            <div class="row justify-content-center">
                <p class="col-4 lead font-weight-bold text-light bg-info p-2 m-2 mb-4 badge-pill">"@ViewData["messageTitle"]"</p>
            </div>
        </div>
        <div class="panel-body row justify-content-center text-center">
            <div class="col-6">
                <form class="p-a-1" method="post">
                    <div class="form-group">
                        <label for="responder">Your name:</label>
                        <input class="form-control" name="responder" />
                    </div>
                    <div class="form-group">
                        <label for="responseTitle">Response Title:</label>
                        <input class="form-control" name="responseTitle" />
                    </div>
                    <div class="form-group">
                        <label for="responseText">Your Response:</label>
                        <input class="form-control" name="responseText" />
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

