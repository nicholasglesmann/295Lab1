@model Message
@{
    Layout = "_Layout1";
    ViewData["Title"] = "Send Message";
}

<div class="container">
    <div class="panel panel-success">
        <div class="panel-heading text-center">
            <h1>Send A Message</h1>
        </div>
        <div class="panel-body row justify-content-center text-center">
            <div class="col-6">
                <form class="p-a-1" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name">Your name:</label>
                        <input class="form-control" asp-for="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Recipient">Recipent Name:</label>
                        <input class="form-control" asp-for="Recipient" />
                    </div>
                    <label for="messagePriority">Message Priority:</label>
                    <div class="form-group">
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="messagePriority" value="3Low">Low
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="messagePriority" value="2Normal" checked>Normal
                            </label>
                        </div>
                        <div class="form-check-inline">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="messagePriority" value="1High">High
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="MessageTitle">Message Title:</label>
                        <input class="form-control" asp-for="MessageTitle" />
                    </div>
                    <div class="form-group">
                        <label asp-for="MessageText">Your Message:</label>
                        <input class="form-control" asp-for="MessageText" />
                    </div>
                    <div class="text-center">
                        <button class="btn btn-primary" type="submit">
                            Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

